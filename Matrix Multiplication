#include <iostream>
using namespace std;

int main() {
    int r1, c1, r2, c2;
    cout << "Enter rows for Matrix 1: ";
    cin >> r1;
    cout << "Enter columns for Matrix 1: ";
    cin >> c1;
    cout << "Enter rows for Matrix 2: ";
    cin >> r2;
    cout << "Enter columns for Matrix 2: ";
    cin >> c2;

    if (c1 != r2) {
        cout << "Error: Matrices cannot be multiplied (columns of first != rows of second)\n";
        return 0;
    }

    int A[100][100], B[100][100], P[100][100];

    cout << "Enter elements of Matrix 1:\n";
    for (int i = 0; i < r1; i++)
        for (int j = 0; j < c1; j++)
            cin >> A[i][j];

    cout << "Enter elements of Matrix 2:\n";
    for (int i = 0; i < r2; i++)
        for (int j = 0; j < c2; j++)
            cin >> B[i][j];

    for (int i = 0; i < r1; i++)
        for (int j = 0; j < c2; j++) {
            P[i][j] = 0;
            for (int k = 0; k < c1; k++)
                P[i][j] += A[i][k] * B[k][j];
        }

    cout << "\nThe product of the two matrices is:\n";
    for (int i = 0; i < r1; i++) {
        for (int j = 0; j < c2; j++) cout << P[i][j] << " ";
        cout << "\n";
    }
    return 0;
}


/* OUTPUT

Enter rows for Matrix 1: 2
Enter columns for Matrix 1: 3
Enter rows for Matrix 2: 3
Enter columns for Matrix 2: 2
Enter elements of Matrix 1:
1 2 3
4 5 6
Enter elements of Matrix 2:
1 2
4 5
3 6

The product of the two matrices is:
18 30 
42 69 
*/
