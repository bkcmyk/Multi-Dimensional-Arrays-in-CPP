#include <iostream>
using namespace std;

int main() {
    int r, c;
    cout << "Enter number of rows: ";
    cin >> r;
    cout << "Enter number of columns: ";
    cin >> c;

    int A[100][100];
    cout << "Enter " << r * c << " elements of the matrix:\n";
    for (int i = 0; i < r; i++)
        for (int j = 0; j < c; j++)
            cin >> A[i][j];

    cout << "\nTranspose of the matrix is:\n";
    for (int j = 0; j < c; j++) {
        for (int i = 0; i < r; i++) cout << A[i][j] << " ";
        cout << "\n";
    }
    return 0;
}

/* OUTPUT

Enter number of rows: 2
Enter number of columns: 3
Enter 6 elements of the matrix:
1 2 3
4 5 6

Transpose of the matrix is:
1 4 
2 5 
3 6 */
